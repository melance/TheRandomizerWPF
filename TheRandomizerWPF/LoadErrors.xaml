<metro:MetroWindow x:Class="LoadErrors"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:metro="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                   Title="Grammar Load Errors"
                   Height="600" 
                   Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <ListBox Name="lstExceptions" SelectionChanged="lstExceptions_SelectionChanged" />
        <GridSplitter Grid.Column="0" Width="3" ResizeBehavior="CurrentAndNext" />
        <TextBox Name="txtException" Grid.Column="1" />
    </Grid>
</metro:MetroWindow>
