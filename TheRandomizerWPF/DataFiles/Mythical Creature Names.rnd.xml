<?xml version="1.0"?>
<Grammar xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xsi:type="AssignmentGrammar">
	<name>Mythical Creature Names</name>
	<author>Lance Boudreaux</author>
	<description>Generates the names for new species of mythical creatures</description>
	<genre>Fantasy</genre>
	<category>Name</category>
	<parameters />
	<supportsMaxLength>true</supportsMaxLength>
	<items>
		<item name="Start">[Cv]</item>
		<item name="Start">[Cvc]</item>
		<item name="Start">[Cvd]</item>
		<item name="Start">[Cvvc]</item>
		<item name="Start">[Vc]</item>
		<item name="Start">[Vv]</item>
		
		<!-- Definitions -->
		<item name="V">[UpperVowel]</item>
		<item name="v">[LowerVowel]</item>
		<item name="C">[UpperConsonant]</item>
		<item name="c">[LowerConsonant]</item>
		
		<!-- Starters -->
		<item name="Ctvc" next="cvc">[Ct][v][c]</item>
		<item name="Ctvcv">[Ct][v][c][v]</item>
		<item name="Cv" next="cdvc">[C][v]</item>
		<item name="Cv" next="cvc">[C][v]</item>
		<item name="Cv" next="cvcd">[C][v]</item>
		<item name="Cvc" next="cvcc">[C][v][c]</item>
		<item name="Cvc" next="cvd">[C][v][c]</item>
		<item name="Cvc" next="cvvcd">[C][v][c]</item>
		<item name="Cvc" next="vcd">[C][v][c]</item>
		<item name="Cvcd" next="ccvdc">[C][v][cd]</item>
		<item name="Cvd" next="cdvc">[C][vd]</item>
		<item name="Cvvc" next="cvc">[C][v][v][c]</item>
		<item name="Vc" next="ca">[V][c]</item>
		<item name="Vc" next="cdcv">[V][c]</item>
		<item name="Vc" next="cvd">[V][c]</item>
		<item name="Vc" next="vc">[V][c]</item>
		<item name="Vv" next="cvc">[V][v]</item>
		
		<!-- Inners -->
		<item name="cdcv" next="cv">[cd][c][v]</item>
		<item name="cv" next="cdvcv">[c][v]</item>
		<item name="cvc" next="vc">[c][v][c]</item>
		<item name="cvc" next="vcd">[c][v][c]</item>
		<item name="vcd" next="vc">[v][cd]</item>
				
		<!-- Enders -->
		<item name="ca">[c][vd]</item>
		<item name="ccvdc">[c][c][vd][c]</item>
		<item name="cdvc">[cd][v][c]</item>
		<item name="cdvcv">[cd][v][c][v]</item>
		<item name="cv">[c][v]</item>
		<item name="cvc">[c][v][c]</item>
		<item name="cvcc">[c][v][c][c]</item>
		<item name="cvcd">[c][v][cd]</item>
		<item name="cvd">[c][vd]</item>
		<item name="cvvcd">[c][v][v][cd]</item>
		<item name="vc">[v][c]</item>
		<item name="vcd">[v][cd]</item>
		
		<!-- Vowel Digraphs -->
		<item name="vd">ai</item>
		<item name="vd">au</item>
		<item name="vd">aw</item>
		<item name="vd">ay</item>
		<item name="vd">ea</item>
